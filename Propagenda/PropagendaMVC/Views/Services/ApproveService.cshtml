@model PropagendaMVC.Models.ServiceToApproveVM

@{
    ViewData["Title"] = "ApproveService";
}

<h1>Approve Service</h1>

<h4>@Model.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApproveService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsApproved" /> @Html.DisplayNameFor(model => model.IsApproved)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Services List</a>
    <br />
    <br />
    <button onclick="history.go(-1)">Back</button>
</div>

