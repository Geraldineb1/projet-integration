@model IEnumerable<PropagendaMVC.Models.ServiceListVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>




<div class="album py-5">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var item in Model)
        {
            if (item.IsActive && item.IsApproved)
            {

                <div class="col">
                  <div class="card shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                       <p>by @Html.DisplayFor(modelItem => item.Provider.Name)</p> 
                       <p> @Html.DisplayFor(modelItem => item.LocationArea)</p> 

                      <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            @Html.ActionLink("Discover", "Details", new {  id=item.Id  })
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
            }
        }
      </div>
    </div>
  </div>