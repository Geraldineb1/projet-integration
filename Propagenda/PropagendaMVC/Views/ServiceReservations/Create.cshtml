@model PropagendaMVC.Models.CreateServiceReservationVM

@{
    ViewData["Title"] = "Create";
}

<h1>Votre demande de service</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="DateService" class="control-label"></label>
                <input asp-for="DateService" class="form-control" type="datetime"/>
                <span asp-validation-for="DateService" class="text-danger"></span>
                <input type="hidden" asp-for="ServiceId" value="@ViewContext.RouteData.Values["id"]" />
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" type="datetime"/>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Demander" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
    <br />
    <br />
    <button onclick="history.go(-1)">Back</button>
</div>

