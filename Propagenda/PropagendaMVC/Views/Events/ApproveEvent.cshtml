@model PropagendaMVC.Models.EventToApproveVM

@{
    ViewData["Title"] = "ApproveEvent";
}

<h1>Approve Event</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApproveEvent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@ViewContext.RouteData.Values["id"]" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsApproved" /> @Html.DisplayNameFor(model => model.IsApproved)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Events List</a>
    <br />
    <br />
    <button onclick="history.go(-1)">Back</button>
</div>

