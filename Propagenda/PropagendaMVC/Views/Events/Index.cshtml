@model IEnumerable<PropagendaMVC.Models.EventVM>

@{
    ViewData["Title"] = "Événements";
}

<div class="row justify-content-between">

    <h1 style="width:50%">Evénements</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <button style="width: max-content;" class="btn btn-default btn-lg"><a style="color: #fff;text-decoration: none;" asp-action="Create">Ajouter un événement</a></button>

    }
</div>



<div class="album py-5">
    <div class="container">

        <div class="row justify-content-md-center row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                if (item.IsActive && item.IsApproved)
                {
                    <!--First columnn-->
                    <div class="col-lg-4">
                        <!--Card-->
                        <div class="card wow fadeIn">

                            <!--Card image-->
                            <div class="view overlay hm-white-slight">
                                <img src="https://mdbootstrap.com/img/Photos/Horizontal/Work/4-col/img%20(25).jpg" class="img-fluid" alt="">
                                <a>
                                    <div class="mask"></div>
                                </a>
                            </div>
                            <!--/.Card image-->
                            <!--Card content-->
                            <div class="card-block">
                                <!--Title-->

                                <h4 class="card-title">@item.Title</h4>
                                <hr>
                                <!--Text-->
                                <p class="card-text">@item.Description</p>
                                <p class="card-text">@item.EventDate.ToString("dd MMM yyyy")</p>
                                <p class="card-text">@item.VenueName</p>
                                <p>
                                    @Html.ActionLink("Voir plus", "Details", "Events",
                            routeValues: new { id = item.Id },
                            htmlAttributes: new { @class = "btn btn-default btn-lg" })
                                </p>

                            </div>
                            <!--/.Card content-->

                        </div>
                        <!--/.Card-->
                    </div>
                    <!--First columnn-->
                }
            }
        </div>
    </div>

    <div class="py-3  text-center">
        <div class="col-lg-6 mx-auto">
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <button type="button" class="btn btn_retour btn-primary btn-lg px-4 gap-3" onclick="history.go(-1)" style="background-color: #a4a9ae;">Retour</button>
            </div>
        </div>
    </div>

</div>


