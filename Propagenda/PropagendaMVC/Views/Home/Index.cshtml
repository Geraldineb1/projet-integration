@model PropagendaMVC.Models.HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<!--Mask-->
<div class="view header hm-black-strong">
  <div class="full-bg-img flex-center">
    <ul>
      <li>
        <h1 class="h1-responsive wow fadeInDown" data-wow-delay="0.2s"> Propagenda </h1></li>
      <li>
        <p class="wow fadeInDown"> Booking & Evénements</p>
      </li>
      <li>
                @if (!User.Identity.IsAuthenticated) 
                {
                    <a  class="btn btn-primary btn-lg wow fadeInLeft" data-wow-delay="0.2s"  asp-action="Register" asp-controller="Users"> S'enregistrer </a>
                }
            </li>
    </ul>
  </div>
</div>
<!--/.Mask-->



<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Bienvenue sur Propagenda !</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">Notre application est la solution idéale pour vos besoins d'organisation d'événements.
        Grâce à notre plateforme, vous pouvez facilement trouver des prestataires de service qualifiés pour répondre à vos besoins spécifiques.
        Que vous cherchiez un musicien, un groupe, un circassien ou un clown, notre réseau de prestataires expérimentés peut vous aider.</p>
    </div>
</div>

